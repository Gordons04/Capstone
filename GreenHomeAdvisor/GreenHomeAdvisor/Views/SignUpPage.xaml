<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GreenHomeAdvisor.Views.SignUpPage">
    <ScrollView>
        <StackLayout BackgroundColor="White">
            <Label Text="Account Information" TextColor="Black" Font="Bold, 20" />
            <Label Text="Username" TextColor="Black" Font="16"/>
            <Entry x:Name="usernameEntry" Placeholder="username" PlaceholderColor="Gray"/>
            <Label Text="Password" TextColor="Black" Font="16"/>
            <Entry x:Name="passwordEntry" IsPassword="True" Placeholder="password" PlaceholderColor="Gray" />
            <Label Text="Confirm Password" TextColor="Black" Font="16"/>
            <Entry x:Name="passwordSecondEntry" IsPassword="True" Placeholder="confirm password" PlaceholderColor="Gray"/>

            <!--
            <Label Text="Personal Information" TextColor="Black" Font="Bold, 20" />
