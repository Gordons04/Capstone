            <Label Text="Last Name" TextColor="Black" Font="16"/>
            <Entry x:Name="lNameEntry" Placeholder="Last Name" PlaceholderColor="Gray" />
            <Label Text="E-mail Address" TextColor="Black" Font="16"/>
            <Entry x:Name="emailEntry" Placeholder="example@gmail.com" PlaceholderColor="Gray"/>
            -->

            <!--
            <Label Text="Address Information" TextColor="Black" Font="Bold, 20"/>
            <Label Text="Street" TextColor="Black" Font="16" />
            <Entry x:Name="streetEntry" Placeholder="Street" PlaceholderColor="Gray" />
            <Label Text="City" TextColor="Black" Font="16"/>
            <Entry x:Name="cityEntry" Placeholder="City" PlaceholderColor="Gray" />
            <Label Text="State" TextColor="Black" Font="16"/>
            <Entry x:Name="stateEntry" Placeholder="State" PlaceholderColor="Gray" />
            <Label Text="ZIP Code" TextColor="Black" Font="16"/>
            <Entry x:Name="zipEntry" Placeholder="ZIP Code (Example: 04281)" PlaceholderColor="Gray" />
            -->
            
            
            <Button Text="Submit" TextColor="White" BackgroundColor="Green" BorderColor="Black" Clicked="SubmitButtonClicked" />
            <Button Text="Cancel" TextColor="White" BackgroundColor="Red" BorderColor="Black" Clicked="CancelButtonClicked" />

        </StackLayout>
    </ScrollView>    
    
</ContentPage>